---
import MainLayout from "../../layouts/main.layout.astro";
import { getPostsGroupedByTags } from "../../content/config";

const tags = await getPostsGroupedByTags();
---

<MainLayout title="all tags">
  <h1>all tags</h1>
  <ul>
    {
      Array.from(tags).map(([tag, posts]) => (
        <li>
          &mdash; <a href={`/tags/${tag}`}>{tag}</a> ({posts.length} post{posts.length > 1 ? 's' : ''})
        </li>
      ))
    }
  </ul>
</MainLayout>
