---
interface Props {
  slug: string;
  title?: string;
  user?: string;
  height?: number;
  tabs?: string;
  editable?: boolean;
}

const {
  slug,
  title,
  user = 'codenomnom',
  height = 400,
  tabs = 'result',
  editable = false
} = Astro.props;
---

<p
  class="codepen"
  data-height={height}
  data-slug-hash={slug}
  data-pen-title={title}
  data-user={user}
  data-default-tab={tabs}
  data-editable={editable}
  style={`height: ${height}px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;`}
>
  <span>
    See the Pen <a href={`https://codepen.io/${user}/pen/${slug}`}>{title}</a>
    by {user} (<a href={`https://codepen.io/${user}`}>@{user}</a>)
    on <a href="https://codepen.io">CodePen</a>.
  </span>
</p>

<script async src="https://public.codepenassets.com/embed/index.js"></script>
